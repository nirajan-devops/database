[mysqld]
innodb_buffer_pool_size=8G
innodb_buffer_pool_instances=8

max_connections=500

# Replication
log-bin=mysql-bin
server-id=1
sync_binlog=1
innodb_flush_log_at_trx_commit=1

# Performance
innodb_io_capacity=2000
innodb_flush_method=O_DIRECT

# Retain logs longer
binlog_expire_logs_seconds=1209600
